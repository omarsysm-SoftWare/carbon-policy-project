{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Carbon Policy Schema",
  "type": "object",
  "properties": {
    "electricity": {
      "type": "number",
      "minimum": 0,
      "description": "Electricity consumption in kWh"
    },
    "water": {
      "type": "number",
      "minimum": 0,
      "description": "Water consumption in cubic meters (m3)"
    },
    "travel": {
      "type": "number",
      "minimum": 0,
      "description": "Travel distance in kilometers (km)"
    }
  },
  "required": [
    "electricity",
    "water",
    "travel"
  ],
  "additionalProperties": false
}